# Base app URLs
NEXT_PUBLIC_BASE_URL=http://localhost:3000
# If the app is served under a sub-path (leave empty in most local dev setups)
# NEXT_PUBLIC_BASE_PATH=/

# Backend API (used by all client fetches and analytics beacon proxy)
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000

# Auth/session
# Minutes until JWT cookie expiration (used when setting the session cookie)
NEXT_PUBLIC_JWT_EXPIRATION_MINUTES=30

# Email/phone verification
# Seconds before resend link becomes available again
NEXT_PUBLIC_VERIFICATION_CODE_TTL=60

# ==========================
# Analytics configuration
# ==========================
# Recommended: route ALL analytics via backend beacon so VPN/adblockers don’t block them
NEXT_PUBLIC_ANALYTICS_VIA_BEACON=true

# Direct Segment mode (DEV ONLY). Keep disabled when using beacon mode
NEXT_PUBLIC_SEGMENT_ENABLED=false
# Provide only if enabling direct mode above
# NEXT_PUBLIC_SEGMENT_WRITE_KEY=YOUR_SEGMENT_WRITE_KEY

# Verbose analytics logs/debug_mode flag
NEXT_PUBLIC_SEGMENT_DEBUG=true

# Frontend identify/alias disabled — backend owns identity
NEXT_PUBLIC_ANALYTICS_IDENTITY_FRONTEND=false

# Sampling for very noisy view change events. 1 = send all
NEXT_PUBLIC_ANALYTICS_SAMPLE_VIEW_CHANGED=1

# Time-on-view pulse controls
# Disable periodic pulses (final event still sent on pagehide)
NEXT_PUBLIC_ANALYTICS_DISABLE_PULSES=false
# Sample pulses: send for 1 out of N sessions. 1 = send all
NEXT_PUBLIC_ANALYTICS_SAMPLE_CONTENT_PULSES=1