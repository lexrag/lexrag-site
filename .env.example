# Frontend environment variables (example)
# Copy this file to .env and fill in appropriate values

# API base
NEXT_PUBLIC_API_BASE_URL=https://api.lexrag.com
NEXT_PUBLIC_VERIFICATION_CODE_TTL=30
NEXT_PUBLIC_JWT_EXPIRATION_MINUTES=60

# Segment / Analytics
NEXT_PUBLIC_SEGMENT_WRITE_KEY=YOUR_SEGMENT_WRITE_KEY
NEXT_PUBLIC_SEGMENT_ENABLED=true
NEXT_PUBLIC_SEGMENT_DEBUG=false
# Frontend identify is disabled by default; enable explicitly only for testing
NEXT_PUBLIC_ANALYTICS_IDENTITY_FRONTEND=false
# Sampling for ultra-noisy streams (1 means no sampling)
NEXT_PUBLIC_ANALYTICS_SAMPLE_VIEW_CHANGED=1

# App base (SEO, sitemap/robots)
NEXT_PUBLIC_BASE_URL=https://lexrag.com
# Base path when the app is served under a subpath (leave empty for root)
NEXT_PUBLIC_BASE_PATH=

# Analytics time-on-view controls
NEXT_PUBLIC_ANALYTICS_DISABLE_PULSES=false
# 1 = no sampling; 10 = send pulses for 1 of 10 sessions
NEXT_PUBLIC_ANALYTICS_SAMPLE_CONTENT_PULSES=1

# Optional (reserved for future usage)
# NEXT_PUBLIC_ANALYTICS_HANDOFF_URL=

# Route frontend events via backend beacon (recommended)
NEXT_PUBLIC_ANALYTICS_VIA_BEACON=true
